# ==============================================================================
# Tor obfs4 Bridge Configuration
# ==============================================================================
#
# Copy this file to .env and modify values for your environment.
#
# This runs a Tor bridge with obfs4 pluggable transport to help users
# bypass censorship.
#

# Container name
SERVICE_NAME=tor-obfs4-bridge

# Onion Routing port
# Must be different from PT_PORT
OR_PORT=9001

# Pluggable Transport port (obfs4)
# Choose a port that looks like common traffic (443, 8080, etc.)
PT_PORT=443

# Contact email (shown in bridge descriptor, can be pseudonymous)
EMAIL=your@email.com

# Bridge nickname (1-19 alphanumeric characters, no spaces)
NICKNAME=YourBridgeName

# Enable additional Tor variables (0 = no, 1 = yes) 
# This enables/disables advanced options below
ENABLE_ADDITIONAL_VARIABLES=1

# Publish server descriptor (0 = private bridge, 1 = public)
PUBLISH_SERVER_DESCRIPTOR=1

# Bridge distribution method (none, https, email, telegram, lox, moat, reserved,
# or any) 
# 'any' means distributed by all available BridgeDB methods
BRIDGE_DISTRIBUTION=any

# Operate as an exit relay (0 = no, 1 = yes)
EXIT_RELAY=0