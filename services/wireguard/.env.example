# ==============================================================================
# WireGuard VPN Server Configuration
# ==============================================================================
#
# Copy this file to .env and modify values for your environment.
#

# Container name
SERVICE_NAME=wireguard

# User/group ID for file permissions (use 'id' command to find yours)
PUID=1000
PGID=1000

# Timezone (TZ database name)
TIMEZONE=Europe/Bucharest

# Server URL (domain name or IP address for clients to connect)
SERVER_URL=your.domain.com

# WireGuard port (default: 51820)
SERVER_PORT=51820

# Peer names (comma-separated list of device names)
PEERS=Phone,Laptop,Tablet

# Internal VPN subnet
INTERNAL_SUBNET=192.168.1.0/24

# Allowed IPs for clients (0.0.0.0/0 routes all traffic through VPN)
ALLOWED_IPS=0.0.0.0/0,::/0

# DNS servers for peers (comma-separated)
PEER_DNS=2606:4700:4700::1111,2606:4700:4700::1001,1.1.1.1,1.0.0.1,2001:4860:4860::8888,2001:4860:4860::8844,8.8.8.8,8.8.4.4

# Enable persistent keepalive for all peers
PERSISTENT_KEEP_ALIVE_PEERS=all

# Log peer configurations on container start
LOG_CONFIGS=true
